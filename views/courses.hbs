<div class="row">
    <div class="col-md-12">
          <br>
          <h2>Courses <a href="/courses/add" class="btn btn-success float-right">Add New Course</a></h2>
          <hr />
          <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Course Code</th>
                        <th>Course Description</th>
                        <th>     </th>
                    </tr>
                </thead>    
                <tbody>
                    {{#each data}}
                        <tr>
                            <td><a href="/courses/{{courseId}}">{{courseCode}}</td>
                            <td><a href="/students?course={{courseId}}">{{courseDescription}}</td>
                             <td><a href="/course/delete/{{courseId}}" class="btn btn-danger">remove</a></td>
                        </tr>
                    {{else}}
                        <tr>
                            <td colspan="4">No Data Available</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
          </div> 
    </div>
</div>
